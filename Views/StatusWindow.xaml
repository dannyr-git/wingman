<Window
    x:Class="wingman.Views.StatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid
        x:Name="RootGrid"
        Background="White"
        Loaded="RootGrid_Loaded">
        <Border
            x:Name="StatusBorder"
            Padding="0"
            Background="#CC333333"
            BorderBrush="Gray"
            BorderThickness="1">
            <TextBlock
                x:Name="StatusTextBlock"
                MinWidth="250"
                MinHeight="35"
                Margin="10,10,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White"
                Text="{Binding CurrentStatus}" />
        </Border>
    </Grid>
</Window>
