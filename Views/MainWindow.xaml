<Window
    x:Class="wingman.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:wingman.Views"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RowDefinitions="42,*">
        <!--  App Title Bar  -->
        <Grid x:Name="MainTitleBar">
            <Image
                Grid.Row="0"
                Width="40"
                Height="30"
                Margin="2,0,10,7"
                HorizontalAlignment="Left"
                Source="../Assets/wingman.png" />
            <TextBlock
                x:Name="MainAppTitleTextBlock"
                Grid.Row="0"
                Width="Auto"
                Margin="50,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="Black"
                IsColorFontEnabled="True"
                Text="Wingman"
                TextWrapping="NoWrap" />
        </Grid>

        <views:MainPage Grid.Row="1" />

    </Grid>

</Window>
